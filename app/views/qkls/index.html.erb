<p id="notice"><%= notice %></p>

<h1>Qkls</h1>

<table>
  <thead>
    <tr>
      <th>Xuexi</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @qkls.each do |qkl| %>
      <tr>
        <td><%= link_to qkl.xuexi ,qkl%></td>

        <td><%= pluralize(qkl.votes.count,"vote") %></td>
        <td><%= button_to '+1',upvote_qkl_path(qkl),method: :post %></td>

        <td><%= link_to 'Delete', qkl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Qkl', new_qkl_path %>
